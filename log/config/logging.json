{
    "enable": true,
    "version": 1,
    "disable_existing_loggers": false,

    "formatters": {
        "default": {
            "format": "%(asctime)s | %(levelname)s | %(name)s | %(filename)s:%(lineno)d | %(message)s"
        }
    },

    "handlers": {
        "console": {
            "class": "logging.StreamHandler",
            "level": "WARNING",
            "formatter": "default"
        },

        "file_main": {
            "class": "logging.FileHandler",
            "level": "DEBUG",
            "formatter": "default",
            "filename": "logs/project.log"
        }
    },

    "loggers": {
        "project": {
            "level": "DEBUG",
            "handlers": ["console", "file_main"],
            "propagate": false
        }
    }
}
